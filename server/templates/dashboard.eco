<!doctype html>
<html>
    <head>
        <meta charset="utf-8" />

        <title>Mist√∂k</title>

        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="/css/style.less.css">

        <script src="/js/jquery.min.js"></script>
        <script src="/js/mynd.min.js"></script>

        <script type="text/coffeescript">
        $ ->
            data = []
            for x in [0...30]
                data.push
                    description: x
                    data: [ Math.floor(Math.random() * 10), Math.floor(Math.random() * 3) ]
            
            chart = new Mynd.Chart.column(
                el: $("article#chart div.svg")
                data: data
                width: 725
                height: 200
                isStacked: true
            )
            chart.padding.barPadding = 0.3
            chart.render()
        </script>

        <script src="/js/coffee-script.min.js"></script>
    </head>
    <body>
        <header id="top">
            <div class="wrapper">
                <nav>
                    <ul>
                        <li><a href="/">Dashboard</a></li>
                        <li><a href="/documentation">Documentation</a></li>
                        <li><a>Account</a></li>
                        <li><a>Logout</a></li>
                    </ul>
                </nav>
                <a id="logo" href="/"></a>
            </div>
        </header>

        <div id="main">
            <div class="wrapper">
                <div class="box">
                    <div class="top">
                        <h2>localhost</h2>
                    </div>
                    
                    <div id="content">
                        <div class="float left">
                            <article id="chart">
                                <header><h3>Overview</h3></header>

                                <div class="svg"></div>
                            </article>
                            
                            <article id="exceptions">
                                <header><h3>Exceptions over last 14 days</h3></header>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Browsers</th>
                                            <th colspan="2">Body</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td><span class="browser big chrome"></span></td>
                                            <td>
                                                Uncaught Error: this is not happening!
                                                <ul>
                                                    <li>http://localhost:1115/</li>
                                                    <li>line 73</li>
                                                </ul>
                                            </td>
                                            <td>&hellip;</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </article>
                        </div>
                        
                        <div class="float right">
                            <article id="stats">
                                <header><h3>Statistics</h3></header>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Log type</th>
                                            <th>Today</th>
                                            <th>Mean</th>
                                            <th>Median</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Errors</td>
                                            <td>0 <span>(+0)</span></td>
                                            <td>0</td>
                                            <td>0</td>
                                        </tr>
                                        <tr>
                                            <td>Messages</td>
                                            <td>0 <span>(+0)</span></td>
                                            <td>0</td>
                                            <td>0</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </article>

                            <article id="email">
                                <header><h3>Email Notifiers</h3></header>
                            </article>
                            
                            <article id="whitelist">
                                <header><h3>Whitelist Regexps</h3></header>
                            </article>
                        </div>

                        <article id="logs" class="float full">
                            <header><h3>Full Logs</h3></header>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Type</th>
                                        <th>Browser</th>
                                        <th colspan="2">Body</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for k, message of @log: %>
                                        <tr>
                                            <td><%= new Date(parseInt(message.timestamp)).toUTCString() %></td>
                                            <td><span class="type <%= message.type %>"><%= message.type %></span></td>
                                            <td><span class="browser small <%= message.browser %>"></span></td>
                                            <td>
                                                <%= message.body %>
                                                <% if message.type is 'exception': %>
                                                    at <span class="url"><%= message.url %></span> on line <span class="line"><%= message.line %></span>
                                                <% end %>
                                            </td>
                                            <td>&hellip;</td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>